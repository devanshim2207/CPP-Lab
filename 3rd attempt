#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>
int thread1wantstoenter =0, thread2wantstoenter=0;
void* process1(){
int i;
while(1){
printf("process 1 is in non - critical section\n ");
sleep(1);
thread1wantstoenter = 1;
if(thread2wantstoenter == 0){
printf("process 1 is in critical section\n ");
for(i=0;i<2;i++)
printf("process 1\n");
thread1wantstoenter =0;
}
}
pthread_exit(NULL);
}
void* process2(){
int i;
while(1){
printf("process 2 is in non - critical section\n ");
sleep(1);
thread2wantstoenter = 1;
if(thread1wantstoenter == 0){
printf("process 2 is in critical section\n ");
for(i=0;i<2;i++)
printf("process 2\n");
thread2wantstoenter =0;
}
}
pthread_exit(NULL);
}
int main(){
pthread_t tid1, tid2;
pthread_create(&tid1, NULL, process1, NULL);
pthread_create(&tid2, NULL, process2, NULL);
pthread_join(tid1, NULL);
pthread_join(tid2, NULL);
pthread_exit(NULL);
}
